<div class="card-header d-flex justify-content-between">
  <h5 class="m-0 text-dark">
    Списки задач
  </h5>
  <%= link_to 'Новый Todo список', new_todo_list_path, class: "btn btn-primary btn-sm" %>
</div>

<div class="card-body">
  <ul class="list-group">
    <% @todo_lists.each do |todo_list| %>
      <%= link_to todo_list, class:"text-decoration-none" do %>
        <li class="list-group-item card-header d-flex justify-content-between">
          <div>
            <h6 class="m-0 text-dark">
              <b><%= todo_list.title%></b>
              <span class="badge badge-<%= todo_list.badge_color %>"><%= todo_list.status %></span>
            </h6>
            <p class="text-secondary m-0"><small><%= todo_list.percent_complete %>% Выполнено (<%= todo_list.completed_items %>/<%= todo_list.total_items %> Пунктов)</small></p>
          </div>
          <div>
      <% end %>
      <%= link_to 'Редактировать', edit_todo_list_path(todo_list), class: "btn btn-secondary" %>
      </div>
      </li>
    <% end %>
  </ul>
</div>


